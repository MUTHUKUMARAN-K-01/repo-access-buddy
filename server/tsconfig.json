
{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": "..",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "module": "NodeNext",
    "target": "ESNext",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "NodeNext"
  },
  "include": [
    "**/*.ts",
    "../shared/**/*.ts"
  ]
}
